<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PostIT_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:PostIT_App.Pages">

    <Tab Title="Note" >
        <ShellContent
            Title="My notes"
            Route="mynotes"
            ContentTemplate="{DataTemplate pages:MyNotesPage}" />
    </Tab>
    
    <Tab Title="New" >
        <ShellContent
            Title="Add new note"
            Route="addnote"
            ContentTemplate="{DataTemplate pages:AddNotePage}" />
    </Tab>

    <Tab Title="Settings">
        <ShellContent
            Title="Settings"
            Route="settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </Tab>
</Shell>
