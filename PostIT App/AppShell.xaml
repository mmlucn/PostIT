<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PostIT_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:PostIT_App.Pages">

    <Tab Title="Note" Icon="note.svg">
        <ShellContent
            Title="My notes"
            ContentTemplate="{DataTemplate pages:MyNotesPage}" />
    </Tab>
    
    <Tab Title="New" Icon="plus.svg">
        <ShellContent
            Title="Add new note"
            ContentTemplate="{DataTemplate pages:PostItNotePage}" />
    </Tab>
        
    <Tab Title="Settings" Icon="gear.svg">
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </Tab>
</Shell>
