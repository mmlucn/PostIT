<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostIT_App.Pages.AddNotePage"
             xmlns:local="clr-namespace:PostIT_App.Pages"
             xmlns:viewmodel="clr-namespace:PostIT_App.ViewModel"
             Title="New note"
             x:DataType="viewmodel:AddNoteModel"
             >
    <VerticalStackLayout>
        
        <Label
            Text="Title"
            />

        <Entry
            Text="{Binding NoteTitle}"
            Placeholder="Title"
            />

        <Label
            Text="Category"
            />

        <Entry
            Text="{Binding NoteCategory}"
            Placeholder="Note Category"
            />

        <Label
            Text="Text/Description"
            />

        <Editor
            Keyboard="Text"
            Text="{Binding NoteText}"
            HorizontalOptions="Start"
            HeightRequest="200"
            Placeholder="Write the text of your postit note"
            />

        <Button
            Text="Select photo"
            Margin="10"
            Command="{Binding GetPhotoCommand}"
            />

        <Button
            Command="{Binding SaveNoteCommand}"
            Text="Save"
            Margin="10"
            />
    </VerticalStackLayout>
</ContentPage>