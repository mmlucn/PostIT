<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostIT_App.Pages.DetailsPage"
             xmlns:viewmodel="clr-namespace:PostIT_App.ViewModel"
             xmlns:helper="clr-namespace:PostIT_App.Helpers"
             x:DataType="viewmodel:DetailsPageModel"
             Title="DetailsPage">
    <ContentPage.Resources>
        <helper:Base64Converter x:Key="base64Converter"/>
    </ContentPage.Resources>
    
    <VerticalStackLayout Spacing="5">
        
        <Label 
            Text="{Binding PostItNote.Title}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding PostItNote.Category}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding PostItNote.Text}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image Source="{Binding PostItNote.Image.Data, Converter={StaticResource base64Converter}}"/>

    </VerticalStackLayout>
</ContentPage>