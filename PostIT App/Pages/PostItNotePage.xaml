<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostIT_App.Pages.PostItNotePage"
             xmlns:local="clr-namespace:PostIT_App.Pages"
             xmlns:models="clr-namespace:PostIT_Lib.Models"
             Title="PostItNotePage"
             x:DataType="local:PostItNotePage"
             >
    <VerticalStackLayout>
        
        <Label
            Text="Title"
            />

        <Entry
            x:Name="TitleEntry"
            Placeholder="Title"
            />

        <Label
            Text="Category"
            />

        <Entry
            x:Name="CategoryEntry"
            Placeholder="Note Category"
            />

        <Label
            Text="Text/Description"
            />

        <Editor
            x:Name="NoteText"
            Keyboard="Text"
            TextColor="Black"
            HorizontalOptions="Start"
            Placeholder="Write the text of your postit note"
            />

        <Button
            Text="Select photo"
            Clicked="Button_Clicked"
            Margin="10"
            />

        <Button
            x:Name="saveNote"
            Text="Save"
            Clicked="saveNote_Clicked"
            Margin="10"
            />
    </VerticalStackLayout>
</ContentPage>