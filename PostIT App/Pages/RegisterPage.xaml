<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostIT_App.Pages.RegisterPage"
             Title="RegisterPage"
             xmlns:local="clr-namespace:PostIT_App"
             xmlns:viewmodels="clr-namespace:PostIT_App.ViewModel"
             x:DataType="viewmodels:RegisterModel"
             >
    <VerticalStackLayout Margin="5, 15">
        <Label
            Text="Register"
            FontSize="Large"
            FontAttributes="Bold"
            />

        <Label Text="Firstname"/>
        <Entry
            Text="{Binding FirstNameEntry}"
            Placeholder="First Name"
            />

        <Label Text="Lastname"/>
        <Entry
            Text="{Binding LastNameEntry}"
            Placeholder="Last name"
            />

        <Label Text="Email"/>
        <Entry
            Text="{Binding EmailEntry}"
            Placeholder="Email"
            />

        <Label Text="Username"/>
        <Entry
            Text="{Binding UserNameEntry}"
            Placeholder="Username"
            />

        <Label Text="Password"/>
        <Entry
            Text="{Binding PasswordEntry}"
            IsPassword="True"
            Placeholder="Password"
            />

        <Label Text="Confirm password"/>
        <Entry
            Text="{Binding ConfirmPasswordEntry}"
            IsPassword="True"
            Placeholder="Confirm Password"
            />

        <Button
                Text="Register"
                Command="{Binding RegisterCommand}"
                />

    </VerticalStackLayout>
</ContentPage>