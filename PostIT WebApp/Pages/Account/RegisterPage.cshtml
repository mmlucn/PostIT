@page
@model PostIT_WebApp.Pages.Account.RegisterPageModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Join PostIT_WebApp</h3>
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="@Model.FirstName" class="form-label">First Name</label>
                            <input asp-for="@Model.FirstName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.LastName" class="form-label">Last Name</label>
                            <input asp-for="@Model.LastName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Email" class="form-label">Email</label>
                            <input asp-for="@Model.Email" class="form-control" type="email" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.UserName" class="form-label">Username</label>
                            <input asp-for="@Model.UserName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Password" class="form-label">Password</label>
                            <input asp-for="@Model.Password" class="form-control" type="password" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                    <hr class="my-4">
                    <p class="text-center">
                        Already have an account? <a asp-page="/Account/LoginPage2">Log in here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div> 