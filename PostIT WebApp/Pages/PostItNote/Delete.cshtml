@page
@model PostIT_WebApp.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete Note";
}

<style>
    .note-image {
        max-width: 100%;
        height: auto;
    }
    
    .card-body {
        padding: 1.25rem;
    }
    
    .card-footer {
        border-top: none;
    }
</style>

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1 class="display-4">Delete Note</h1>
            <hr class="my-4">
            <h3>Are you sure you want to delete this note?</h3>
            <div class="card mt-4">
                <div class="card-header">
                    <h4>@Model.Note.Title</h4>
                </div>
                <div class="card-body">
                    @if (Model.Note.Image != null)
                    {
                        <img src="data:image;base64,@Model.Note.Image.Data" class="note-image" alt="@Model.Note.Title">
                    }
                    <p class="card-text">@Model.Note.Text</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Category: @Model.Note.Category</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <form method="post">
                        <input type="hidden" asp-for="Note.Id" />
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a asp-page="./MyNotesPage" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
